#:kivy 1.0.9

<PongGame>:
    ball: pong_ball
    ball2: pong_ball2
    
    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "grosse"
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "bite"
    
    PongBall:
        id: pong_ball
        center: self.parent.center
    PongBall2:
        id: pong_ball2
        center: self.parent.center


<PongBall>:
    size: 50, 50 
    canvas:
        Color: 
            rgb: (0,1,0)
        Ellipse:
            pos: self.pos
            size: self.size          

<PongBall2>:
    size: 50, 50 
    canvas:
        Color: 
            rgb: (0,1,0)
        Ellipse:
            pos: self.pos
            size: self.size          
