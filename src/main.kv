#:kivy 1.4.1

<BallsContainer>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        color: 0, 0, 0, 1
        top: root.top
        font_size: 36
        text: str(root.num_healthies)

    Label:
        color: 0, 0, 0, 1
        right: root.right
        top: root.top
        font_size: 36
        text: str(root.num_parazites)


<Ball>:
    size: 15, 15
    canvas:
        Color:
            rgb: self.col
        Ellipse:
            pos: self.pos
            size: self.size


