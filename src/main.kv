#:kivy 1.4.1

<BallsContainer>:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        color: 0,0,0,1
        size: 100,60
        top: root.top
    Label:
        color: 0, 0, 0, 1
        pos: -10,root.height-80
        font_size: 20
        text: "H : "+str(root.num_healthies)+"\nP : "+str(root.num_parazites)
        color: 1,1,1,1

    Button:                     #left/down
        color: 0,0,0,1
        size: 110,50

    Button:                     #up/right
        color: 0,0,0,1
        size: 125,240
        top: root.top
        right: root.right

    Label:
        color: 1,1,1,1
        text_size: self.size
        pos: root.width-115, root.height-70
        font_size: 12
        text: str(root.top_idds[0][0])+" \ " +str(root.top_idds[0][1])+"\nVir : " +str("%.2f" % root.top_idds[0][2])+"\nTrans : "+str("%.2f" % root.top_idds[0][3])+"\nRecov: "+str("%.2f" % root.top_idds[0][4])

    Label:
        color: 1,1,1,1
        text_size: self.size
        pos: root.width-115, root.height-150
        font_size: 12
        text: str(root.top_idds[1][0])+" \ " +str(root.top_idds[1][1])+"\nVir : " +str("%.2f" % root.top_idds[1][2])+"\nTrans : "+str("%.2f" % root.top_idds[1][3])+"\nRecov: "+str("%.2f" % root.top_idds[1][4])

    Label:
        color: 1,1,1,1
        text_size: self.size
        pos: root.width-115, root.height-230
        font_size: 12
        text: str(root.top_idds[2][0])+" \ " +str(root.top_idds[2][1])+"\nVir : " +str("%.2f" % root.top_idds[2][2])+"\nTrans : "+str("%.2f" % root.top_idds[2][3])+"\nRecov: "+str("%.2f" % root.top_idds[2][4])


    Label:
        color: 1,1,1,1
        font_size: 12
        text: "Mean Vir : "+str("%.2f" % root.mean_vir)+"\nMean Trans : "+str("%.2f" % root.mean_trans)+"\nMean Recov : "+str("%.2f" % (1-root.mean_recov))
        pos: 5,-25

<Ball>:
    size: 15, 15
    canvas:
        Color:
            rgb: self.col
        Ellipse:
            pos: self.pos
            size: self.size

